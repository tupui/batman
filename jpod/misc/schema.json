{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "space": {
      "type": "object",
      "properties": {
        "corners": {
          "type": "array",
          "items": {}
        },
        "size_max": {
          "type": "integer",
          "default": 2,
          "minimum": 0,
          "exclusiveMinimum": true
        },
        "delta_space": {
          "type": "number",
          "default": 0.01,
          "minimum": 0
        },
        "provider": {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "enum": ["halton", "sobol", "sobolscramble", "lhs", "lhsc", "faure", "uniform"],
              "default": "halton"
            },
            "size": {
              "type": "integer",
              "default": 20,
              "minimum": 0,
              "exclusiveMinimum": true
            }
          },
          "required": [
            "method",
            "size"
          ]
        }
      },
      "required": [
        "corners",
        "size_max",
        "delta_space",
        "provider"
      ]
    },
    "pod": {
      "type": "object",
      "properties": {
        "dim_max": {
          "type": "integer",
          "default": 100,
          "minimum": 1
        },
        "quality": {
          "type": "number",
          "default": 0.8,
          "minimum": 0,
          "exclusiveMinimum": true,
          "maximum": 1,
          "exclusiveMaximum": true
        },
        "tolerance": {
          "type": "number",
          "default": 0.99,
          "minimum": 0,
          "exclusiveMinimum": true,
          "maximum": 1,
          "exclusiveMaximum": true
        },
        "strategy": {
          "type": "array",
          "items": {}
        },
        "resample": {
          "type": "string",
          "enum": ["None", "MSE", "loo_mse", "loo_sobol", "extrema", "hybrid"],
          "default": "MSE"
        },
        "server": {
          "type": "null",
          "default": null
        },
        "type": {
          "type": "string",
          "default": "static",
          "enum": ["static", "dynamic"]
        }
      },
      "required": [
        "dim_max",
        "quality",
        "tolerance",
        "strategy",
        "resample",
        "server",
        "type"
      ]
    },
    "snapshot": {
      "type": "object",
      "properties": {
        "max_workers": {
          "type": "integer",
          "default": 2,
          "minimum": 1
        },
        "io": {
          "type": "object",
          "properties": {
            "shapes": {
              "type": "object",
              "properties": {
                "0": {
                  "type": "array",
                  "items": {}
                }
              },
              "required": [
                "0"
              ]
            },
            "format": {
              "type": "string",
              "default": "fmt_tp"
            },
            "variables": {
              "type": "array",
              "items": {}
            },
            "point_filename": {
              "type": "string",
              "default": "header.py"
            },
            "filenames": {
              "type": "object",
              "properties": {
                "0": {
                  "type": "array",
                  "items": {}
                }
              },
              "required": [
                "0"
              ]
            },
            "template_directory": {
              "type": "null",
              "default": null
            },
            "parameter_names": {
              "type": "array",
              "items": {}
            }
          },
          "required": [
            "shapes",
            "format",
            "variables",
            "point_filename",
            "filenames",
            "template_directory",
            "parameter_names"
          ]
        },
        "provider": {
          "type": "object",
          "properties": {
            "command": {
              "type": "string",
              "default": "bash"
            },
            "timeout": {
              "type": "integer",
              "default": 3600,
              "minimum": 0
            },
            "context": {
              "type": "string",
              "default": "data"
            },
            "script": {
              "type": "string",
              "default": "data/script.sh"
            },
            "clean": {
              "type": "boolean",
              "default": false
            },
            "private-directory": {
              "type": "string",
              "default": "jpod-data"
            },
            "data-directory": {
              "type": "string",
              "default": "cfd-output-data"
            },
            "restart": {
              "type": "string",
              "default": "False"
            }
          },
          "required": [
            "command",
            "timeout",
            "context",
            "script",
            "clean",
            "private-directory",
            "data-directory",
            "restart"
          ]
        }
      },
      "required": [
        "max_workers",
        "io",
        "provider"
      ]
    },
    "prediction": {
      "type": "object",
      "properties": {
        "points": {
          "type": "array",
          "items": {}
        },
        "method": {
          "type": "string",
          "default": "kriging"
        }
      },
      "required": [
        "points",
        "method"
      ]
    },
    "uq": {
      "type": "object",
      "properties": {
        "sample": {
          "type": "integer",
          "default": 50000,
          "minimum": 1000
        },
        "test": {
          "type": "string",
          "enum": ["Ishigami", "Channel_Flow", "Rosenbrock"]
        },
        "pdf": {
          "type": "array",
          "items": {}
        },
        "type": {
          "type": "string",
          "default": "aggregated",
          "enum": ["aggregated", "block"]
        },
        "method": {
          "type": "string",
          "default": "sobol",
          "enum": ["sobol", "FAST"]
        }
      },
      "required": [
        "sample",
        "pdf",
        "type",
        "method"
      ]
    }
  },
  "required": [
    "space",
    "pod",
    "snapshot",
    "prediction",
    "uq"
  ]
}